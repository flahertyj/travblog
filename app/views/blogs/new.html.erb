<%= form_tag("/blogs", method: "post") do %>
  <%= label_tag("Title") %>
  <br>
  <%= text_field_tag :title %>
  <br><br>

  <%= label_tag("Images") %>
  <br>
  <% (0..11).each do |n| %>
    <%= text_field_tag "image_#{n}".to_sym %>
  <% end %>
  <br><br>

  <%= label_tag("Body: ") %>
  <br>
  <%= text_area_tag :body %>
  <br><br>

  <%= submit_tag "Create" %>
<% end %>
