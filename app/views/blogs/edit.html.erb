<%= form_for(@blog) do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br><br>

  <%= label_tag("Images") %>
  <br>
  <% (0..11).each do |n| %>
    <%= f.text_field "image_#{n}".to_sym %>
  <% end %>
  <br><br>

  <%= f.label :body %>
  <br>
  <%= f.text_area :body %>
  <br><br>

  <%= f.submit "Save changes" %>
<% end %>
